{
  "kobart_model_dir": "models/kobart_ec",

  "decode": {
    "num_beams": 6,
    "num_beam_groups": 1,
    "num_return_sequences": 1,
    "no_repeat_ngram_size": 9,
    "encoder_no_repeat_ngram_size": 9,
    "repetition_penalty": 1.5,
    "length_penalty": 0.9,
    "early_stopping": true,
    "renormalize_logits": true,
    "bad_words": ["!!!!", "???", "ㅋㅋㅋㅋ", "ㅎㅎㅎㅎ"],
    "max_input_tokens": 256,
    "max_new_tokens_floor": 32,
    "max_new_tokens_ceil": 96,
    "max_chars": 160
  },

  "guard": {
    "cer_gate": 0.40,
    "max_sent_cap": 2
  },

  "thresholds": {
    "tau_gain": 0.05,
    "nbest_margin": 0.15,
    "PHONETIC_MAX": 0.28,
    "LOGPROB_LOW": -4.0,
    "CONF_FALLBACK": 0.84,
    "MAX_CAND": 5
  }
}